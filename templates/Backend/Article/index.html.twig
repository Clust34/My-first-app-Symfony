{% extends 'base.html.twig' %}

{% block title %}
	Admin Articles
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<h1 class="text-center mb-4">Administration des articles</h1>
		<a href="{{ path('admin.articles.create')}}" class="btn btn-primary mt-4">Créer un article</a>
		<div class="row mt-4">
			{% for article in articles %}
				<div class="col-md-4">
					<div
						class="card">
						{# Pour ne plus avoir les caractères spéciaux encodés #}
						<h2 class="card-header">{{ article.title|sanitize_html }}</h2>
						<div class="card-body">
							<p class="card-text">
								{{ article.content|sanitize_html }}
							</p>
							<div class="d-flex justify-content-between">
								<a href="{{ path('admin.articles.edit', {'id': article.id})}}" class="btn btn-warning">Modifier</a>
								{% include 'Backend/Article/_deleteForm.html.twig' %}
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
